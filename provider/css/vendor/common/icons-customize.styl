.icons
    background-repeat no-repeat
    background-position center center
    background-size cover
    margin-right 8px


.icon-phone
    display block
    width 15px
    height 15px
    background-image url(../../img/icons/phone.png?v=1)


.icon-place
	display block
	width 16px
	height 19px
	background-image url(../../img/icons/place.png?v=1)


.icon-mail
    display block
    width 21px
    height 16px
    background-image url(../../img/icons/mail.png?v=1)


.icon-arrow-down-small-2
    display block
    width 14px
    height 7px
    background-image url(../../img/icons/arrow-down-small-2.png?v=1)


.icon-button-nav-mobile
    display block
    width 32px
    height 20px
    background-image url(../../img/icons/button-nav-mobile.png?v=1)


.icon-bc-index	
    display inline-block
    width 14px
    height 14px	
    background-image url(../../img/icons/home-2.png?v=1)


.icon-right-small-2
    display inline-block
    width 6px
    height 10px	
    background-image url(../../img/icons/arrow-right-small-2.png?v=1)	


.icon-triangle-right-2
    display inline-block
    width 7px
    height 8px	
    background-image url(../../img/icons/triangle-right-2.png?v=1)


.icon-phone-2
    &:before
        content ""
        display inline-block
        width 12px
        height 13px
        background-image url(../../img/icons/phone-2.png?v=1)


.icon-mail-2
    &:before
        content ""
        display inline-block
        width 17px
        height 13px
        background-image url(../../img/icons/mail-2.png?v=1)


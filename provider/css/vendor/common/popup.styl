.item-popup.hide-popup
  display none

  
.item-popup.show-popup
  display block
  animation-name zoomIn
  animation-duration .3s
  .p-product-content
    padding-top 0
    padding-bottom 0

    

.count-items
  width 100%
  text-align left
  margin-top 20px
  font-size 13px
  padding-left 10px
  font-family 'ubuntu-bold', sans-serif

  


.item-popup
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  background rgba(45, 56, 102, .6)
  z-index 9998  
  .int-body
    display flex
    flex-direction column
    align-items center
    justify-content center    
    .title
      font-size 30px
      font-family "apercu-bold", sans-serif
      margin-top 15px
    .description
      color #333
      margin-top 15px
      text-align center
    .popup-button
      margin-top 20px
  .title-1
    width 100%
    padding-bottom 8px
    border-bottom 1px solid #dddddd
    display flex
    justify-content flex-start
    align-items center
    padding-left 10px
    img
      margin-right 10px
  .close-popup
    position absolute
    border-radius 6px
    font-weight bold
    color #000
    font-size 18px
    right 6px
    top 6px
    cursor pointer
      


.int-content
  width 600px
  height auto
  background #fff
  z-index 9999
  position absolute
  top 47%
  left 50%
  transform translate(-50%, -50%)
  border-radius 6px
  //border 4px solid #c2e7db
  padding 70px 25px 70px 25px



.popup-mi-carrito
  .int-content
    width 450px
  .item-child
    display flex
    flex-direction column
    align-items center
    padding 20px
    .button-type-3
      margin-top 20px




.p-popup-button.hide
  display none
.p-popup-button.show
  display block
.p-popup-button
  .button-type-2
    margin 0 auto



.int-pscroll
  position absolute
  height 100%
  width 100%  
  top 0
  left 0


.popup-view .int-content
  background #fff


.p-change-height .int-pscroll
  overflow-y scroll


.p-change-height .int-content
  top 0
  transform translateX(-50%)
  margin 20px 0



.close-popup-2
  position absolute
  top 0
  right 0
  padding 22px 22px
  display block
  cursor pointer


@media (max-width: 700px)

  .int-content
    width 94%    
    padding 70px 25px 70px 25px



@media (max-width: 630px)

  .int-content
    width 94%    
    padding 50px 25px 50px 25px

  .item-popup
    .int-body      
      .title
        font-size 24px        
        margin-top 15px
      .description        
        margin-top 14px        
      .popup-button
        margin-top 20px
.wrapper
    width 1280px
    display flex
    margin 0 auto
    position relative
    align-items center
    justify-content space-between

.wrapper-fluid
	width 1280px
	position relative

.message-success
	background #00bc8c!important

.message-incorrect
	background #E74C3C!important

.message-warning
	background #F39C12 !important




::-webkit-scrollbar 
	width 10px
	border-radius 8px


/* Track */
::-webkit-scrollbar-track 
	background #e5e5e5
	border-radius 8px


/* Handle */
::-webkit-scrollbar-thumb 
	background #ababab
	border-radius 8px


/* Handle on hover */
::-webkit-scrollbar-thumb:hover 
	background #999 
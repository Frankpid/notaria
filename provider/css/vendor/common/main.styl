.body-main
	overflow-x hidden



.wrapper
		width 1280px
		display flex
		margin 0 auto
		position relative
		align-items center
		justify-content space-between



.wrapper-fluid
	width 1280px
	position relative


.message-success
	background #00bc8c!important


.message-incorrect
	background #E74C3C!important


.message-warning
	background #F39C12 !important



::-webkit-scrollbar 
	width 10px
	border-radius 8px


/* Track */
::-webkit-scrollbar-track 
	background #e5e5e5
	border-radius 8px


/* Handle */
::-webkit-scrollbar-thumb 
	background #ababab
	border-radius 8px


/* Handle on hover */
::-webkit-scrollbar-thumb:hover 
	background #999 




.with-bg-img
	background-repeat no-repeat
	background-size cover
	background-position center center



.row-type-1
	.title
		margin-top 15px
		font-size 20px
	.data
		margin-top 20px
	.wrapper-children
		padding 20px 0
	



.row-type-2
	.data
		margin-top 38px
		> div
			padding-top 12px
			padding-bottom 12px
	.group-title-type-1
		h2
			font-weight bold



.equal-margin-1
	padding-top 176px
	padding-bottom 208px



.caption-type-1
	position absolute
	padding-left 5%
	padding-right 5%
	top 47%
	left 50%
	transform translate(-50%, -50%)   
	z-index 30 
	.title-1
		font-size 10px
		color #fff
		text-transform uppercase
		letter-spacing 1.8px
		margin-bottom 18px    
	.parent-title-2
		width 100%
		overflow-wrap anywhere
		strong
			font-family "apercu-bold", sans-serif   
	.parent-title-2 *
		font-size 30px
		color #fff
	.description
		margin-top 15px
		font-size 15px
		color #fff
	.button-link
		padding 16px 32px
		color #fff
		background colorBtnSlider 
		display table
		align-items center
		justify-content center
		border-radius 20px
		margin-top 25px
		font-family "apercu-bold", sans-serif		
		transition 0.25s
		&:hover, &:focus
			box-shadow 0 0.5em 0.5em -0.4em colorBtnSlider
			transform translateY(-0.25em)
			border-color colorBtnSlider



.caption-static
	position static!important
	transform none



.title-type-1
	margin-top 25px



.list-type-2
	overflow-wrap anywhere
	a  
		color color
		display flex
		margin-bottom 6px
		i  
			min-width 25px
	.data
		margin-top 50px



.margins-body-type-1
	padding 20px 0 160px 0



.margins-body-type-2
	padding 20px 0 80px 0



.list-nav-type-1
	margin-top 34px
	.list-nav
		background #ebeef8
		padding 0 12px
		display flex
		justify-content space-between
		border-radius 10px
		a  
			color color
			display flex
			align-items center
			justify-content center
			padding 25px 6px
			position relative
			text-transform uppercase
			font-size 13px
			text-align center
			&:after
				content ""
				height 2px
				width 100%
				position absolute
				bottom 0
				left 0
				background transparent
			&:hover
				&:after
					background backNav		
		a.active
			&:after
				background backNav



.detail-style-1
	margin-top 35px
	.col-1
		width 344px
		background #ebeef8
		padding 0 20px  18px
		border-radius 6px
		.item 
			margin-top 25px
			&:last-child
				padding-bottom 12px
	.col-2
		width calc(100% - 359px)



.title-list-detail
	font-size 20px
	color #9999cc
	font-family "apercu-bold"


.data-list-detail
	margin-top 16px
	a  
		min-height 40px
		border-top 1px solid #c6ccdd
		display flex
		align-items center
		padding 0 8px 0 0
		color backNav
	a.active
		text-decoration underline
		font-family "apercu-bold"








@media (max-width: 630px)
	.equal-margin-1
		padding-top 110px
		padding-bottom 150px
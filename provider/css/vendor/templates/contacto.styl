.wrap-contact
    padding 17px 0 0px 0



.contact-form
    padding 0px 0 18px 0
    .caption
        margin-top 30px
        h2, h2 *
            color colorBtnReserve
        h3
            color #fff
            font-size 20px  
    label
        font-family "apercu-bold", sans-serif
        font-size 15px
    input
        color #fff
        


.parent-iframe-map
    .iframe-map
        width 100%
        height 600px
        position relative
        border 0 none



.box-form-check
    margin-top 30px!important
    display flex
    input
        position absolute
        visibility hidden
        opacity 0
        &:checked + label:before
            background-image url(../../img/icons/check.png?v=2)
            background-position center center
            background-repeat no-repeat
    label
        display flex 
        align-items center
        cursor pointer
        &:before
            content ""
            width 27px
            height 27px
            display flex
            align-items center
            justify-content center
            border 1px solid #60b8fe
            border-radius 4px
            box-sizing border-box
            margin-right 10px
        span
            color #fff!important
            font-size 13px
            margin 0 0 0 0 !important
            font-family "apercu-light"
        a  
            color #60b8fe
            font-size 13px
            margin-left 6px
        span, a
            line-height 1.3em!important 
    .i-check-2
        margin-left 50px
        
.header-top-list
  height 50px


.slick-arrow
  position absolute
  top 50%
  transform translateY(-50%)
  width 56px
  height 56px   
  z-index 10
  background-color colorBtnSlider
  border-radius 50%
  font-size 0
  background-repeat no-repeat
  background-position center center
.slick-prev
  left 14%
  background-image url(../../img/icons/arrow-left-small.png?v=1)
.slick-next
  right 14%
  background-image url(../../img/icons/arrow-right-small.png?v=1)



.slideshow-main
  position relative
  .img
    width 100%
    padding-top 640px
    background-repeat no-repeat
    background-size cover
    background-position center center
  .slick-item
    position relative
  .caption
    text-align left


  
.list-type-1
  background #fff
  padding 100px 0 65px 0
  .box
    padding 0 78px
  .parent-title *
    font-size 30px
    strong
      font-family "apercu-bold", sans-serif
  

  
.slideshow-type-1
  margin-top 20px
  .slick-list
    margin 0 -6px    
    padding 2px 0!important
  .slick-slide    
    .slick-item
      margin 0 6px
      border-radius 6px
      > .caption
        position relative
        min-height 193px
        &:hover
            &:before
              border-color #2c3764
        &:before
          content ""
          display block
          position absolute
          top 0
          left 0
          width 100%
          width calc(100% - 1px)
          height 100%
          height calc(100% - 1px)
          border 1px solid transparent
          pointer-events none
          border-radius 6px
          transition all .35s          

    .caption
      background colorCard      
      padding 28px 18px 13px 18px
      border-radius 6px
  .slick-prev
    left -80px
  .slick-next
    right -80px
  .slick-arrow
    background-color #99ccff
  .parent-title-2
    display flex
    align-items center
    img
      margin-right 10px
  .parent-title-2 *
    color #fff
  .description
    color #666666
    font-size 13px
    margin-top 14px
    min-height 48px
  .button-link
    margin-top 12px
    background colorBtnCard
    display table
    padding 12px 17px
    border-radius 20px
    font-family "apercu-bold", sans-serif
    transition 0.25s
    &:hover, &:focus
      box-shadow 0 0.5em 0.5em -0.4em colorBtnCard
      transform translateY(-0.25em)
      border-color colorBtnCard
  .col
    padding-top 13px
    padding-bottom 13px
  .wrapper-children
    box-shadow 0 0 10px #ddd
    border 1px solid transparent
    position relative
    border-radius 6px
    &:before
      content ""
      display block
      position absolute
      top 0
      left 0
      width 100%
      width calc(100% - 1px)
      height 100%        
      pointer-events none  
      border-radius 6px
      transition all .35s
      border 1px solid transparent 
    &:hover
      &:before
        border 1px solid #2c3764 




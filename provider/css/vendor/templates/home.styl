.header-top-list
  height 50px


.slick-arrow
  position absolute
  top 50%
  transform translateY(-50%)
  width 56px
  height 56px   
  z-index 10
  background-color colorBtnSlider
  border-radius 50%
  font-size 0
  background-repeat no-repeat
  background-position center center
.slick-prev
  left 14%
  background-image url(../../img/icons/arrow-left-small.png?v=1)
.slick-next
  right 14%
  background-image url(../../img/icons/arrow-right-small.png?v=1)


.slideshow-main
  position relative
  .img
    width 100%
    padding-top 40rem
    background-repeat no-repeat
    background-size cover
    background-position center center
  .slick-item
    position relative
  .caption
    text-align left


.caption-type-1
  position absolute
  padding 0 5%
  top 47%
  left 50%
  transform translate(-50%, -50%)   
  z-index 30 
  .title-1
    font-size 10px
    color #fff
    text-transform uppercase
    letter-spacing 1.8px
    margin-bottom 18px    
  .parent-title-2
    strong
      font-family "apercu-bold", sans-serif   
  .parent-title-2 *
    font-size 30px
    color #fff
  .description
    margin-top 15px
    font-size 15px
    color #fff
  .button-link
    padding 16px 32px
    color #fff
    background colorBtnSlider 
    display table
    align-items center
    justify-content center
    border-radius 20px
    margin-top 25px
    font-family "apercu-bold", sans-serif

.caption-static
  position static
  transform none

  
.list-type-1
  background #fff
  padding 100px 0 65px 0
  .box
    padding 0 78px
  .parent-title *
    font-size 30px
    strong
      font-family "apercu-bold", sans-serif
  
  
.slideshow-type-1
  margin-top 20px
  .slick-list
    margin 0 -6px
  .slick-slide    
    .slick-item
      margin 0 6px
      border-radius 6px
      overflow hidden
    .caption
      background colorCard      
      padding 28px 18px 13px 18px
  .slick-prev
    left -80px
  .slick-next
    right -80px
  .slick-arrow
    background-color #99ccff
  .parent-title-2
    display flex
    align-items center
    img
      margin-right 10px
  .parent-title-2 *
    color #fff
  .description
    color #666666
    font-size 13px
    margin-top 14px
  .button-link
    margin-top 12px
    background colorBtnCard
    display table
    padding 12px 17px
    border-radius 20px
    font-family "apercu-bold", sans-serif


.btn-formalities
  font-size 15px
  display flex
  align-items center
  justify-content center
  padding-top 55px
  color color
  font-family "apercu-bold", sans-serif
  &:after
    content ""
    width 14px
    height 12px
    display inline-block
    background-repeat no-repeat
    background-position center center  
    background-image url(../../img/icons/arrow-right.png?v=1)
    margin-left 10px


.services-list
  background colorServices
  padding-top 74px
  .parent-title
    display flex
    align-items center
    &:before
      content ""
      display inline-block
      vertical-align middle
      width 19px
      height 65px
      background-repeat no-repeat
      background-position center center  
      background-image url(../../img/icons/arrow-down-big.png?v=1)
      margin-right 14px
  .parent-title *
    font-size 20px
    strong
      font-size 30px   
  .parent-title-2 *
    color color
    font-size 20px
    font-family "apercu-bold", sans-serif
  .slick-slide   
    img
      width 100% 
    .slick-item
      margin 0 6px
    .caption
      background #fff
      border-top-left-radius 0
      border-top-right-radius 0
      padding 28px 18px 13px 18px
  .description
    color colorDescriptionServices
  .button-link
    background colorBtnServices
  .title-cat
    font-size 20px
    display flex
    align-items center
    &:before
      content ""
      display inline-block
      vertical-align middle
      width 9px
      height 11px
      background-repeat no-repeat
      background-position center center  
      background-image url(../../img/icons/triangle-right.png?v=1)
      margin-right 14px
    

  
.box-cat
  margin-top 50px

.slideshow-services
  margin-top 15px



.appointment  
  position relative
  background-repeat no-repeat
  background-position center center
  background-size cover
  background-color colorAppointment
  .caption
    position static
    transform none
    margin 0 auto
    padding-top 11rem
    padding-bottom 13rem
  .parent-title-2 *
    color color
  .description
    color backNav



.accounts
  position relative
  background-color colorAppointment
  overflow-x hidden
  .item-1
    background colorBtnSlider
    .parent-title-2 *
      color #fff
    .description
      color #fff
  .item-2
    background-size cover
    background-repeat no-repeat
    background-position center center  
    background-image url(../../img/accounts-img.jpg?v=1)          
    .parent-title-2 *
      color color
    .description
      color #000
      margin-top 25px
    .button-link
      margin-top 38px
  .caption
    position static
    transform none
    padding-top 11rem
    padding-bottom 13rem



.list-accounts
  padding 35px 20px
  .item
    display flex
    align-items center
    margin-bottom 48px
    &:last-child
      margin-bottom 0
    img
      margin-right 18px
    p
      color #fff



.confidence
  background colorConfidence
  padding 98px 0 105px 0
  .row-main
    display block
  .caption
    position static
    transform none
  .parent-title-2 *
    color color
    text-align left
  .slick-arrow
    background-color colorBtnConfidence
  .slick-prev
    left 0
  .slick-next
    right 0


.slideshow-confidence
  img
    display inline-block
    margin-bottom 15px
  .title-1
    font-size 30px
    color color
    text-transform initial
    letter-spacing initial
    font-family "apercu-bold", sans-serif  
  .description
    color #000
    text-align left  


.do-vertical-line
  position relative
  margin 0 auto
  &:before
    content ""
    display inline-block
    vertical-align middle
    height 100%
    width 1px
    background #9fa6bd
    position absolute
    left 50%
    top 58%
    transform translate(-50%, -50%)
  > div
    &:nth-child(1)
      padding-right 70px
    &:nth-child(2)
      padding-left 40px


  
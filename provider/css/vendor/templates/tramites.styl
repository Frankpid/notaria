.tramite-form
    .block-form
        label
            color #000
            margin-bottom 6px
            display inline-block
        .box-form
            margin-top 15px
        .fi-validator
            position relative
            bottom 0
        .g-form-col
            align-items flex-start
        .button
            font-family "apercu-bold",sans-serif
            background colorBtnSlider
            margin-top 50px
    
    .form-text-line
        font-size 15px
        font-family "apercu-bold"
        margin 50px 0 0 0
    .group-form
        margin-top 15px        
        .box-form
            margin-top 0
    .g-form-col-2 
        .box-form
            width calc(100% - 248px)
            margin-right 18px
            &:first-child                
                width 230px



.g-form-col-2-type-1    
    .box-form
        &:last-child
            margin-right 0



.payment-method-form
    .pmf-item
        display flex
        align-items flex-start
        flex-wrap wrap
        margin-top 25px
        p  
            font-size 15px
        img
            display block
            margin-right 30px
        div
            width calc(100% - 110px)   
            position relative
            top -2px    
    .pmf-item-2
        margin-top 30px
    
    .parent-list
        padding-left 120px
        margin-top 10px
        li  
            display flex
            flex-direction column
            color #000
            position relative
            padding 0 0 0 14px
            margin-bottom 6px
            font-size 15px
            strong
                margin-top 4px
            &:before
                content ""
                display block
                width 5px
                height 5px
                background #e6902b
                border-radius 50%
                position absolute
                top 5px
                left 0

.body.home   
    .payment-method-form
        .pmf-item
            padding 18px 0 0 0 
            border-top 1px solid #3d486a
            margin 15px 0
        p, li
            color #fff
             


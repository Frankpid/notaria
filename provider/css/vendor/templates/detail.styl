.detail-style-1
    .header-parent-title
        display flex
        align-items center
        h2
            font-size 30px
            font-family "apercu-bold", sans-serif


.detail-body
    color backNav
    p   
        line-height 1.3em
    >  p
        font-size 20px
        color backNav
    a  
        color #ff3366
        font-size 14px
        font-family "apercu-bold", sans-serif
        display inline-block
    .inner-data        
        p
            font-size 14px
            color backNav
    h2, h3, h4
        font-size 20px
        color backNav
        font-family "apercu-bold", sans-serif
    ul                            
        li 
            border-top 1px solid #e5e5e5
            color backNav
            font-size 14px
            padding 20px 15px 20px 45px
            position relative
            line-height 1.3em
            &:before
                content ""
                display block 
                position absolute
                top 21px
                left 14px
                width 9px
                height 11px
                background-image url(../../img/icons/triangle-right.png?v=1)
                background-repeat no-repeat
                background-size cover
                background-position center center
                margin-right 20px
        ul 
            padding 0px 0 30px 0
            li   
                padding 2px 0 2px 80px
                border-top 0px solid transparent
                &:before
                    content ""
                    display block                    
                    background-image none
                    background-repeat no-repeat
                    background-size cover
                    background-position center center
                    margin-right 20px
                    width 2px
                    height 1px
                    background backNav
                    top 10px
                    left 45px


.button-detail
    width 167px
    height 45px
    background-image url(../../img/button-detail.png?v=2)
    display block



.banner-detail
    display block
    width 100%
    margin-top 17px        


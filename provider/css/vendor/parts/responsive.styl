@media (max-width: 1500px)

  .slideshow-main
    .slick-prev
      left 9%
    .slick-next
      right 9%




@media (max-width: 1300px)
  .wrapper
    width 94%
  .wrapper-fluid 
    width 100%




@media (max-width: 1199px)  

  .navigation-small-2
    display block


  .footer-nav-list-2
    margin-top 50px

  .slideshow-main
    .slick-prev
      left 5%
    .slick-next
      right 5%



  .parent-nav
    position absolute
    left 0
    top 100%    
    width 360px
    background #293255
    display none
  
  .nav
    width 100%
    ul
      width 100%
      flex-direction column
    li 
      border-bottom #aaafc0 1px solid
      &:hover
        &:after
          display none
    a
      min-height 50px
      padding 0 25px
      justify-content flex-start
      width auto
      span
        width 100%
      &:after
        display none

  .sub-nav
    position relative
    width 100%
    padding 0 25px
    opacity 1	


  .parent-nav
    .nav-small
      width 100%
      display flex
      flex-direction column-reverse
      align-items flex-start
      margin-top 25px
    .btn-reserve
      width 100%
      border-radius 0
      margin-top 80px
    .btn-fb
      margin-left 40px



  .button-nav-mobile
    position absolute
    width 90px
    height 100%
    background #293255
    left 0
    top 0
    .icons
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
  
  .parent-logo
    margin-left 90px

  .button-nav-mobile
    display block


  .nav-show
    .parent-nav
      display block
    .icon-button-nav-mobile
      background-image url(../../img/icons/nav-close.png?v=1)
  



@media (max-width: 1023px)
  .do-vertical-line:before
    display none
  .do-vertical-line > div
    padding-left 0!important
    padding-right 0!important
  .parent-description
    margin-top 40px
    padding 0 20px

  



@media (max-width: 767px)

  .hide-m
    display none!important
  .show-m
    display block!important


  .footer-nav-list-2
    flex-direction column
  .do-line
    border 0
    padding-left .5rem
    padding-right .5rem
  .footer-nav-list-2
    margin-top 0
    > div
      min-height 38px
      text-align left
      border-bottom 1px solid #323a5c
      display flex
      align-items center
      .title
        padding-left .5rem
  .footer-row .title:after
    display none
  .footer-nav-2
    border-top 0
    margin-top 0
  .footer-nav-3, .footer-nav-3-child
    display flex
    flex-direction column  
  .brand-2
    margin-top 60px    
  .footer
    padding-bottom 40px

  

  .slick-arrow
    width 33px
    height 33px

  .legals
    display flex
    margin-top 20px
    flex-direction column
    a  
      margin 8px 0!important


  .slideshow-main
    .slick-prev
      left 3%
    .slick-next
      right 3%


  .header-top-list 
    padding-top 10px
    padding-bottom 10px
    height auto
    a
      font-size 12px
      margin 2px 0 2px 0!important
    .icons
      background-size 90%




@media (max-width: 620px)

  .navigation-small-2
    display none

  .container-fluid
    padding-left 20px
    padding-right 20px

  .caption-type-1 .parent-title-2 *, .list-type-1 .parent-title *, .services-list .parent-title * strong
    font-size 24px
  .caption-type-1 .description
    font-size 13px
  .slideshow-main .img
    padding-top 26rem

  .slideshow-confidence .title-1
    font-size 24px
  .accounts .caption, .appointment .caption
    padding-top 6rem
    padding-bottom 15rem

  .appointment
    background-image url("../../img/appointment-m.jpg")!important
    .caption
      padding-bottom 12rem

  .accounts 
    .item-1
      .caption
        padding-top 6rem
        padding-bottom 8rem
    .item-2
      background-image url("../../img/accounts-img-m.jpg")!important
  
  .list-type-1
    padding-top 70px

  .accordion-button i
    right 0
    position absolute


@media (max-width: 575px)
  .container-fluid
    padding-left 20px
    padding-right 20px
  .list-type-1 .box
    padding 0 40px
  .slideshow-type-1 .slick-prev
    left -45px
  .slideshow-type-1 .slick-next
    right -45px
  .caption-type-1
    padding 0 40px


@media (max-width: 480px)
  .caption-type-1
    padding 0 30px
  .slideshow-type-1 .slick-prev
    left -50px
  .slideshow-type-1 .slick-next
    right -50px
  .list-type-1 .box
    padding 0 35px
  .slideshow-main .img
    padding-top 28rem
  .services-list 
    .parent-title * 
      font-size 18px
      strong    
        font-size 22px
  .logo
    width 175px

@media (max-width: 400px)

  .parent-nav
    width 100%
    margin 0
  .nav a
    padding 0 25px 0 17px


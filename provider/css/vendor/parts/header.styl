.header-top 
	background backgTop
.header-top-list
	a
		color #fff
		margin 0 30px 0 0
		display flex
		align-items center
		background-repeat no-repeat
		background-position center center
		&:before
			margin-right 8px
		&:last-child
			margin 0



.space-header
	height 148px
	width 100%
	background backNav

.header
	background backNav
	z-index 30
	position relative
	position fixed
	width 100%
	z-index 301



.wrapper-nav
	padding 25px 0



.button-nav-mobile
	display none



.nav
	display flex
	align-items center
	ul
		display flex
	a			
		font-size 13px
		display flex
		align-items center
		cursor pointer
		width 100px
		position relative
		span
			padding 7px 22px 7px 22px
		&:after
			content ""
			display block
			width 1px
			height 38px
			background #4c61b8
			position absolute
			right 0
			top 0
	a.with-subnav
		span
			position relative
			padding 7px 22px 7px 16px
			width 100%	
			&:after
				content ""
				width 9px
				height 5px
				display inline-block
				background-image url(../../img/icons/arrow-down-small.png?v=1)
				background-repeat no-repeat
				background-position center center
				position absolute
				right 7px
				top 53%
				transform translateY(-50%)		
	li
		position relative
		display flex		
		&:hover
			&:after
				content ""
				width 100%
				height 2px
				display block
				background colorBtnReserve
				position absolute
				bottom -29px
				left 0
		&:last-child
			a
				&:after
					background transparent
		&.active
			&:after
				content ""
				width 100%
				height 2px
				display block
				background colorBtnReserve
				position absolute
				bottom -29px
				left 0




.sub-nav
	position absolute
	width 199px 	
	opacity 1	
	padding-top 29px
	top 100%
	a 
		background colorSubNav
		border-bottom 1px solid #aaafc0
		min-height 50px
		padding 0 20% 0 14px  
		color color
		width auto
		&:last-child
			border-bottom 0
		&:after
			display none


.navigation-small-2
	display none

.nav-small
	display flex
	align-items center
	justify-content center


.btn-reserve
	display flex
	align-items center
	justify-content center
	width 178px 
	height 48px
	font-size 15px
	background colorBtnReserve
	border-radius 20px
	margin-right 8px


.btn-fb
	width 46px
	height 46px
	border-radius 50%
	background #2f57ac
	border-radius 50%
	font-size 0
	background-image url(../../img/icons/fb.png?v=1)
	background-repeat no-repeat
	background-position center center


.nav-item-home
	width auto!important
	display flex
	align-items center
	justify-content center
	span
		display none
	&:before
		content ""
		display block
		width 21px
		height 21px
		background-image url(../../img/icons/home.png?v=1)
		background-repeat no-repeat
		background-position center center
		padding 0 20px




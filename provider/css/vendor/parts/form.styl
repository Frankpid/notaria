.form
	.box-form
		margin-top 32px
		&:first-child
			margin-top 0

.box-form
	position relative
	> span 
		margin-bottom 10px
		display block
		span 
			color color
			font-family "apercu-bold", sans-serif

.form-item
	border 1px solid color
	width 100%
	height 50px
	color color
	display flex
	align-items center
	justify-content flex-start
	padding 0 10px 0 12px
	border-radius 6px
	box-sizing border-box
	option
		font-size 110%
	&.error
		border-color red

.form-item-select
	padding 0 45px 0 22px

.button
	margin 0 auto
	margin-top 40px
	background backgButton
	display flex
	align-items center
	justify-content center
	border-radius 24px
	width 100%
	height 50px
	color #fff

.g-form-col
	display flex
	align-items center
	justify-content flex-start

.g-form-col
	.box-form
		width 100%
		margin 0
	label
		display flex
		margin-bottom 6px

.g-form-col
	&-2
		.box-form
			width calc(50% - 17px)
			margin 0
			margin-right 34px
			&:last-child
				margin-right 0

.g-form-col
	&-3
		.box-form
			width calc(33% - 17px)
			margin 0
			margin-right 34px
			&:last-child
					margin-right 0

.group-form
	margin-top 32px
	.g-form-col
		margin-top 35px
		&:first-child
			margin-top 0

.fi-validator
	color red
	position absolute
	left 2px
	bottom -30px
	font-size 15px
	font-family "apercu-light"
	&.fi-custom
		bottom: -17px
		left: 33px


.form
  .box-form
    margin-top 32px
    &:first-child
      margin-top 0



.box-form
  position relative
  > span 
    margin-bottom 10px
    display block
    span 
      color color
      font-family "apercu-bold", sans-serif



.form-item
  border 1px solid colorBtnReserve
  width 100%
  height 50px
  color color
  display flex
  align-items center
  justify-content flex-start
  padding 0 10px 0 12px
  border-radius 6px
  box-sizing border-box
  option
    font-size 110%
  &.error
    border-color red



.form-item-select
  padding 0 45px 0 22px



.button
  margin 0 auto
  margin-top 40px
  background backgButton
  display flex
  align-items center
  justify-content center
  border-radius 24px
  width 100%
  height 50px
  color #fff



.g-form-col
  display flex
  align-items center
  justify-content flex-start



.g-form-col
  .box-form
    width 100%
    margin 0
  label
    display flex
    margin-bottom 6px
    color #fff
    



.g-form-col
  &-2
    .box-form
      width calc(50% - 17px)
      margin 0
      margin-right 34px
      &:last-child
        margin-right 0



.g-form-col
  &-3
    .box-form
      width calc(33% - 17px)
      margin 0
      margin-right 34px
      &:last-child
          margin-right 0


.group-form
  margin-top 32px
  .g-form-col
    margin-top 35px
    &:first-child
      margin-top 0



.block-form
  > .box-form
      margin-top 25px
      label, span
          color #fff
      span 
          font-size 13px
          color #c4d6e4
          line-height 1.2em
          margin-top 4px
  .button
      width 179px
      height 48px
      margin 20px 0 0 0
      background #1e5190



.fi-validator
  color red!important
  position absolute
  left 2px
  bottom -30px
  font-size 14px
  font-family "apercu-light"
  &.fi-custom
    bottom -17px
    left 33px



.container-flag
  position absolute
  left 0
  bottom 0
  width 83px
  height 49px
  z-index 2
  background transparent
  margin 0!important
  .flag
    display flex
    align-items center
    justify-content center
    text-align center
    height 100%
    cursor pointer
    img
      border-radius 15px
      width 41px
    &:after
      content ""
      display inline-block
      width 20px
      height 10px
      background-image url(../../img/icons/arrow-down.png?v=2)
      background-repeat no-repeat
      margin-left 6px



.list-flag
  width 100%
  position absolute
  top 100%
  left 0
  height 250px
  overflow-y scroll
  z-index 1000
  padding 10px 0px
  box-sizing border-box
  background #ddd
  img
    width 30px
  .flat-item
    display flex
    align-items center
    justify-content flex-start
    padding 4px 18px
    cursor pointer
    transition all .2s
    &:hover
      background #eee
  span 
    font-size 13px
  .country-name
    margin-left 8px
    line-height 1em
  .dial-code
    margin-left 8px



.parent-phone
  &:after
    content ""
    display block
    position absolute
    bottom 0
    left 0
    width 83px
    height 49px
  .form-item
    padding-left 93px


  
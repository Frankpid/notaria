.footer
  background-image url(../../img/footer.jpg?v=1)
  background-repeat no-repeat
  background-position center center 
  background-size cover
  padding 25px 0 30px 0
  *
    color #fff
    font-size 13px
  .title
    color colorBtnReserve
    font-family "apercu-bold", sans-serif  


.office-hour
  margin-top 18px
  p
    line-height 1.4em



.footer-list-data
  margin-top 18px
  a  
    margin-bottom 18px
    display flex
    align-items center
    &:last-child
      margin-bottom 0
  .list-parent
    display flex
    flex-direction column
    span
      line-height 1.3em


.num-phone
  font-size 20px


.footer-list-style-1
  .list-footer
    margin-top 18px
    display flex
    flex-direction column
    a  
      margin-bottom 12px
      &:last-child
        margin-bottom 0


.accordion
  .accordion-item
    &:first-child
      button
        padding-top 0
  .list-footer
    margin-top 12px
    margin-bottom 12px


.accordion-button
  font-family "apercu-bold", sans-serif 
  padding 15px 10px 15px 0px
  border-bottom 1px solid #323a5c
  text-align left
  display flex
  align-items center
  width 100%
  i  
    margin-left 10px

.footer-row  
  &:last-child
    .title
      &:after
        display none

  .title
    text-align center
    position relative
    padding 0 18px    
    &:after
      content ""
      width 1px
      height 100%
      position absolute
      top 0
      right 0 
      background #323a5c


.do-line
  border-left 1px solid #323a5c
  border-right 1px solid #323a5c
  padding-left 18px
  padding-right 18px


.footer-nav-2
  margin-top 42px
  padding-top 38px
  border-top 1px solid #323a5c


.legals
  a  
    &:last-child
      margin-left 15px


.brand-2
  display flex
  align-items flex-start
  span
    color #4d5a89
    margin-right 10px


.footer-nav-1
  > div
    margin-bottom 40px



.scroll-up
  width 54px
  height 54px
  background color
  border-radius 50%
  position fixed
  bottom 12%
  right 8%
  display block
  background-image url(../../img/icons/arrow-up.png?v=1)
  background-repeat no-repeat
  background-position center center
  background-size 14px 8px
  z-index 200
  opacity 0
  visibility hidden
  transition all .4s

.scroll-up.is-visible
  opacity 1
  visibility visible

